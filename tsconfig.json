{
    "compilerOptions": {
        "target": "esnext",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "outDir": "dist",
        "rootDir": "./",
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ]
}